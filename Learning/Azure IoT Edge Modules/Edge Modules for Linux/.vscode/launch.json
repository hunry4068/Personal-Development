{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "SampleModuleByJava Local Debug (java)",
      "request": "launch",
      "cwd": "${workspaceRoot}/modules/SampleModuleByJava",
      "console": "internalConsole",
      "stopOnEntry": false,
      "mainClass": "com.edgemodule.App",
      "args": "",
      "projectName": "SampleModuleByJava",
      "env": {
        "EdgeHubConnectionString": "${config:azure-iot-edge.EdgeHubConnectionString}",
        "EdgeModuleCACertificateFile": "${config:azure-iot-edge.EdgeModuleCACertificateFile}"
      }
    },
    {
      "type": "java",
      "name": "SampleModuleByJava Remote Debug (java)",
      "request": "attach",
      "hostName": "localhost",
      "port": 5005
    },
    {
      "name": "SampleModuleByPython Remote Debug (Python)",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "localhost",
      "logToFile": true,
      "redirectOutput": true,
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/modules/SampleModuleByPython",
          "remoteRoot": "/app"
        }
      ],
      "windows": {
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}\\modules\\SampleModuleByPython",
            "remoteRoot": "/app"
          }
        ]
      }
    },
    {
      "name": "SampleModuleByPython Local Debug (Python)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/modules/SampleModuleByPython/main.py",
      "console": "integratedTerminal",
      "env": {
        "EdgeHubConnectionString": "${config:azure-iot-edge.EdgeHubConnectionString}",
        "EdgeModuleCACertificateFile": "${config:azure-iot-edge.EdgeModuleCACertificateFile}"
      },
      "windows": {
        "program": "${workspaceFolder}\\modules\\SampleModuleByPython\\main.py"
      }
    }
  ]
}